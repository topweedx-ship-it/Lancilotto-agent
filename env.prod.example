# Production Environment Variables for Trading Agent
# Copy this file to .env.prod and fill in the values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DB_PASSWORD=your_secure_database_password_here

# ===========================================
# TRADING CONFIGURATION
# ===========================================
MASTER_ACCOUNT_ADDRESS=your_master_account_address
PRIVATE_KEY=your_private_key
WALLET_ADDRESS=your_wallet_address
TESTNET=false

# ===========================================
# EXTERNAL API KEYS
# ===========================================
COINGECKO_API_KEY=your_coingecko_api_key

# ===========================================
# MONITORING & LOGGING
# ===========================================
LOG_LEVEL=INFO
GRAFANA_PASSWORD=your_secure_grafana_password

# ===========================================
# PRODUCTION SECURITY
# ===========================================
# Generate strong passwords for production
# Use Docker secrets or external secret management in production
SECRET_KEY=your_django_like_secret_key_for_security

# ===========================================
# OPTIONAL: EMAIL NOTIFICATIONS
# ===========================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# ===========================================
# OPTIONAL: BACKUP CONFIGURATION
# ===========================================
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# ===========================================
# OPTIONAL: EXTERNAL MONITORING
# ===========================================
# Grafana Cloud Prometheus (for remote monitoring)
PROMETHEUS_REMOTE_WRITE_URL=https://prometheus-prod-xyz.grafana.net/api/prom/push
PROMETHEUS_USERNAME=your_grafana_username
PROMETHEUS_PASSWORD=your_grafana_api_key

# ===========================================
# PRODUCTION ENVIRONMENT FLAGS
# ===========================================
ENVIRONMENT=production
DEBUG=false
MAINTENANCE_MODE=false
